{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "HexiRules: Run Application",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: Run Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "unittest",
            "args": ["discover", "-s", "./tests", "-p", "test_*.py", "-v"],
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Python: Debug Test",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/tests/test_automaton.py",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "HexiRules: Full Code Quality Check",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/check_quality.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "HexiRules: Run CLI",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/cli.py",
            "args": ["--rule", "B3/S23", "--steps", "5"],
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceFolder}"
        }
    ]
}
