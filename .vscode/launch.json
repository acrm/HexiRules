{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "GUI",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/main.py",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "justMyCode": true,
      "preLaunchTask": "Build"
    },
    {
      "name": "CLI",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/cli.py",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "justMyCode": true,
      "preLaunchTask": "Build"
    },
    {
      "name": "Tests",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/tools/run_tests.py",
      "args": ["--no-gui"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "justMyCode": true,
      "preLaunchTask": "Build"
    },
    {
      "name": "Server",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/tools/run_server.py",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "justMyCode": true,
      "preLaunchTask": "Build"
    },
    {
      "name": "Desktop",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/tools/run_desktop.py",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "justMyCode": true,
      "preLaunchTask": "Build: Desktop"
    },
    {
      "name": "Web Dev",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/web",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "console": "integratedTerminal",
      "preLaunchTask": "Web: npm install"
    },
    {
      "name": "Open Web",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/web"
    },
    {
      "name": "Open Server Web",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:8000",
      "webRoot": "${workspaceFolder}/web"
    }
  ],
  "compounds": [
    {
      "name": "React Dev",
      "configurations": ["Web Dev", "Open Web"]
    }
  ]
}
